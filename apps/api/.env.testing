# Test environment. Loaded when APP_ENV=testing (e.g. php artisan test).
# PostgreSQL required: migrations use gen_random_uuid() and ENUMs.
# - Enable pgcrypto if needed: CREATE EXTENSION IF NOT EXISTS pgcrypto; (often enabled by default)
# - Create test DB: createdb farm_erp_test

APP_ENV=testing
APP_DEBUG=true

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=farm_erp_test
DB_USERNAME=postgres
DB_PASSWORD=

CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync
MAIL_MAILER=log

# Allow X-User-Id / X-User-Role in tests (PHPUnit, E2E).
DEV_IDENTITY_ENABLED=true
